# ============================================
# Конфигурация лабораторной работы №3
# Docker Compose Multi-Container Application
# ============================================

# --------------------------
# НАСТРОЙКИ БАЗЫ ДАННЫХ
# --------------------------
DB_USER=app_user                    # Имя пользователя БД
DB_PASSWORD=1234  # Пароль пользователя БД
DB_NAME=app_db                      # Имя базы данных
DB_HOST=db                          # Хост БД (имя сервиса в Docker)
DB_PORT=5432                        # Порт БД

# --------------------------
# НАСТРОЙКИ БЭКЕНДА (Python)
# --------------------------
SECRET_KEY=change-this-to-very-secret-key  # Секретный ключ для приложения
DEBUG=false                               # Режим отладки (true/false)
LOG_LEVEL=INFO                           # Уровень логирования

# URL для подключения к БД из бэкенда
DATABASE_URL=postgresql://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_NAME}

# --------------------------
# API URLs для фронтенда
# --------------------------
BACKEND_URL=http://localhost:8000        # URL основного API
MOCK_API_URL=http://localhost:3000       # URL mock API для тестирования

# --------------------------
# НАСТРОЙКИ ПРИЛОЖЕНИЯ
# --------------------------
APP_NAME=Lab3-Docker-Compose
APP_VERSION=1.0.0
API_PREFIX=/api/v1

# --------------------------
# ПРИМЕЧАНИЯ
# --------------------------
# 1. Скопируйте этот файл в .env.db и .env.backend
# 2. Замените все значения 'your_*' на реальные
# 3. Никогда не коммитьте .env файлы с реальными паролями в git!
